{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
    <h1>Liste des utilisateurs</h1>

    <div class="overflow-x-auto">
        <table class="min-w-full">
            <thead>
                <tr>
                    <th class="px-4 py-2">Id</th>
                    <th class="px-4 py-2">Email</th>
                    <th class="px-4 py-2">Rôles</th>
                    <th class="px-4 py-2">Nom d'utilisateur</th>
                    <th class="px-4 py-2">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td class="border px-4 py-2">{{ user.id }}</td>
                    <td class="border px-4 py-2">{{ user.email }}</td>
                    <td class="border px-4 py-2">{{ user.roles ? user.roles|join(', ') : '' }}</td>
                    <td class="border px-4 py-2">{{ user.username }}</td>
                    <td class="border px-4 py-2">
                        <a href="{{ path('app_user_show', {'id': user.id}) }}" class="text-blue-500 hover:text-blue-800">Voir</a>
                        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="text-green-500 hover:text-green-800">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td class="border px-4 py-2" colspan="5">Aucun enregistrement trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <a href="{{ path('app_user_new') }}" class="block mt-4 text-blue-500 hover:text-blue-800">Créer un nouvel utilisateur</a>
{% endblock %}
