    </div>
 <section class="bg-white border-b py-8 min-h-screen">
   
<div class="flex justify-center items-center ">
        {% if is_granted('ROLE_USER') %}

        <a type="button" href="{{ path('task_create') }}" class="relative inline-flex items-center justify-center p-0.5 mb-2 me-2 overflow-hidden text-sm font-medium text-gray-900 rounded-lg group bg-gradient-to-br from-purple-500 to-pink-500 group-hover:from-purple-500 group-hover:to-pink-500 hover:text-white dark:text-white focus:ring-4 focus:outline-none focus:ring-purple-200 dark:focus:ring-purple-800">
<span class="relative px-5 py-2.5 transition-all ease-in duration-75 bg-white dark:bg-gray-900 rounded-md group-hover:bg-opacity-0">
Nouvelle tâche
</span>
</button>
        {% endif %}
    <a type="button" href="{{ path('tasks_done') }}" class="relative inline-flex items-center justify-center p-0.5 mb-2 me-2 overflow-hidden text-sm font-medium text-gray-900 rounded-lg group bg-gradient-to-br from-pink-500 to-orange-400 group-hover:from-pink-500 group-hover:to-orange-400 hover:text-white dark:text-white focus:ring-4 focus:outline-none focus:ring-pink-200 dark:focus:ring-pink-800">
<span class="relative px-5 py-2.5 transition-all ease-in duration-75 bg-white dark:bg-gray-900 rounded-md group-hover:bg-opacity-0">
Liste des tâches terminées
</span>
</a>
    </div>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4 justify-center items-center">
    
        {% if not is_granted('ROLE_USER') %}
        {% for task in tasks %}
        
 <div class="max-w-sm w-full lg:max-w-full lg:flex">
  <div class="h-48 lg:h-auto lg:w-48 flex-none bg-cover rounded-t lg:rounded-t-none lg:rounded-l text-center overflow-hidden" style="background-image: url('/img/card-left.jpg')" title="Woman holding a mug">
  </div>
  <div class="border-r border-b border-l border-gray-400 lg:border-l-0 lg:border-t lg:border-gray-400 bg-white rounded-b lg:rounded-b-none lg:rounded-r p-4 flex flex-col justify-between leading-normal">
    <div class="mb-8">
       {% if task.isDone %}
            <span><i class="fas fa-check text-green-500"></i></span>
        {% else %}
            <span><i class="fas fa-hourglass text-yellow-500"></i></span>
        {% endif %}
      <div class="text-gray-900 font-bold text-xl mb-2">{% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('task_edit', {'id' : task.id }) }}">{{ task.title }}</a>
        {% else %}
            {{ task.title }}
        {% endif %}</div>
      <p class="text-gray-700 text-base">{{ task.content }}</p>
    </div>
    <div class="flex items-center">
     <form action="{{ path('task_toggle', {'id' : task.id }) }}">
            {% if not task.isDone %}
                <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-1 px-2 rounded">Marquer comme faite</button>
            {% else %}
                <button class="bg-red-500 hover:bg-red-700 text-white font-bold py-1 px-2 rounded">Marquer non terminée</button>
            {% endif %}
        </form>
        
        {% if is_granted('ROLE_ADMIN') %}
            {{ include('task/_delete_form.html.twig') }}
        {% endif %}
    </div>
  </div>
</div>
{% else %}
     <div class="w-full text-center">
                    <div class="bg-yellow-200 border-l-4 border-yellow-500 text-yellow-700 p-4" role="alert">
                        <p>Il n'y a pas encore de tâche terminée.</p>
                    </div>
                    {% if is_granted('ROLE_USER') %}
                        <a href="{{ path('task_create') }}" class="bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded mt-4">Créer une tâche</a>
                    {% endif %}
                </div>
{% endfor %}


        {% endif %}

        {% if app.user %}
            {{ include('task/_my_list.html.twig') }}
        {% endif %}
    </div>
{% endblock %}
