{% extends 'base.html.twig' %}

{% block body %}
<div class="pt-24 mt-20" style="text-align: -webkit-center;">
    <div class="container flex flex-col md:flex-row items-center justify-center">
        <!-- Left Col 2 -->
        <div class="w-full py-6 text-center md:order-3">
            <p class="uppercase tracking-loose w-full">Liste des tâches</p>
             
        </div>
        
    </div>
    
</div>
<div class="relative -mt-12 lg:-mt-24">
